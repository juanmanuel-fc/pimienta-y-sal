<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include("./partials/nav.ejs") %> 

    <!-- Header -->
    <%- include("./partials/header.ejs") %> 

    <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
          <h5>Items del Menu traidos dinamicamente desde un array en el controlador</h5>

          <!-- Seccion dinamica comienza aqui -->
          <% menuItems.forEach(item => { %>
            <h4><%= item.nombre %></h4>
            <p class="ps-text-grey"> <%= item.detalle %> $<%= item.precio.toFixed(2) %> </p> 
            <p>--- --- --- ---</p>
          <% }) %>




        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
            width="600px"
          />
        </div>
      </div>

      <!-- Impresion prueba items menu -->

      

      <!-- Footer -->
      <%- include("./partials/footer.ejs") %> 
    
  </body>
</html>
